# Database Configuration
DATABASE_URL=postgresql://michigan_user:changeme@localhost:5432/michigan_hearings
DB_PASSWORD=changeme

# State Configuration
STATE=michigan                          # State to process (for future multi-state support)

# Transcription Configuration
TRANSCRIPTION_SERVICE=local             # Options: local, openai
WHISPER_MODEL=small                     # Options: tiny, base, small, medium, large (small recommended)
DELETE_AFTER_TRANSCRIPTION=true         # Set to true to save disk space
OPENAI_API_KEY=your_openai_api_key_here # Only needed if using openai service

# Storage Paths
VIDEO_STORAGE_PATH=./tmp/videos
TRANSCRIPTION_STORAGE_PATH=./transcriptions
AUDIO_STORAGE_PATH=./tmp/audio

# Processing Configuration
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TRANSCRIPTIONS=2
MAX_RETRIES=3
MAX_HEARINGS_PER_RUN=3                # Limit videos per run (0 = unlimited)

# Transcription post-processing
# PRESERVE_DOTS=false                   # Set to true to keep dots in transcriptions for timestamp alignment

# Scheduling
CRON_SCHEDULE=0 2 * * *               # Daily at 2 AM
RUN_ON_START=false                    # Run immediately on startup
RUN_ONCE=false                        # Exit after one run

# House Scraper Configuration
HOUSE_SCRAPE_YEAR=2025
HOUSE_START_YEAR=2015                 # Oldest year to scrape
HOUSE_END_YEAR=2025                   # Newest year to scrape
HOUSE_MAX_NEW_VIDEOS=-1               # Stop after finding X new videos (-1 = unlimited)

# Senate Scraper Configuration
SENATE_MAX_NEW_VIDEOS=-1              # Stop after finding X new videos (-1 = unlimited)
SENATE_PAGE_SIZE=20                   # Videos per page (10 or 20 recommended)
SENATE_MAX_PAGES=-1                   # Limit pages to scrape (-1 = all pages)
FETCH_VIDEO_URLS_DURING_SCRAPE=true   # Fetch video URLs while scraping

# Monitoring
HEALTH_CHECK_PORT=3000
LOG_LEVEL=info

# AWS Configuration (for run-aws.sh)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=michigan-hearings
# AWS_USE_RDS=false                    # Set to true to use RDS instead of local PostgreSQL
# AWS_LAMBDA_ROLE_ARN=arn:aws:iam::123456789012:role/lambda-execution-role
# AWS_ACCOUNT_ID=123456789012
# AWS_SECURITY_GROUP=sg-xxxxxxxxx      # For RDS access

# Parallel Processing
# USE_PARALLEL_PROCESSING=true         # Download and transcribe simultaneously